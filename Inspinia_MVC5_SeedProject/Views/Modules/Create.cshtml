@model Inspinia_MVC5_SeedProject.Models.Module

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Moduł fiskalny</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Strona główna", "Index", new { id = @Model.DeviceId })
            </li>
            <li class="active">
                <strong>Utwórz</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Powrót", "Index", new { id = @Model.DeviceId }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Nowy moduł fiskalny</h5>
                </div>
                <div class="ibox-content">

				    @using (Html.BeginForm()) 
                    {
                        @Html.AntiForgeryToken()
    
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.DeviceId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.UniqueNumber, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.UniqueNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UniqueNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                                    @Html.ActionLink("Anuluj", "Index", new { id = @Model.DeviceId }, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
 </div>
