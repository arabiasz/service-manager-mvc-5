@model Inspinia_MVC5_SeedProject.Models.Dealer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Dealer</h2>
        <ol class="breadcrumb">
            <li class="active">
